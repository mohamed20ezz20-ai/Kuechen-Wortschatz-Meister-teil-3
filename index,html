<script>
// ‚îÄ‚îÄ‚îÄ‚îÄ Data ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
const vocab = [
  {icon:"üçΩÔ∏è", art:"der", word:"Teller",    meaning:"flacher Gegenstand aus Porzellan oder Keramik zum Servieren von Speisen", syn:["Speiseteller","Essteller"], ex:"Der Teller ist gro√ü und wei√ü."},
  {icon:"‚òï",  art:"die", word:"Tasse",     meaning:"kleines Gef√§√ü mit Henkel f√ºr hei√üe Getr√§nke", syn:["Kaffeetasse","Teetasse"], ex:"Die Tasse Kaffee ist hei√ü."},
  {icon:"ü•õ",  art:"das", word:"Glas",      meaning:"durchsichtiger Beh√§lter f√ºr Getr√§nke", syn:["Trinkglas","Wasserglas"], ex:"Ich trinke Wasser aus dem Glas."},
  {icon:"üç¥",  art:"die", word:"Gabel",     meaning:"Esswerkzeug mit Zinken zum Aufspie√üen", syn:["Essgabel"], ex:"Nimm die Gabel in die rechte Hand."},
  {icon:"üî™",  art:"das", word:"Messer",    meaning:"scharfes Werkzeug zum Schneiden", syn:["Tafelmesser","K√ºchenmesser"], ex:"Das Messer schneidet gut."},
  {icon:"ü•Ñ",  art:"der", word:"L√∂ffel",    meaning:"Besteck mit Schale f√ºr Suppe und Dessert", syn:["Suppenl√∂ffel","Teel√∂ffel"], ex:"Ich esse Suppe mit dem L√∂ffel."},
  {icon:"üßÇ",  art:"das", word:"Salz",      meaning:"wei√ües kristallines W√ºrzmittel", syn:["Speisesalz","Meersalz"], ex:"Das Essen braucht mehr Salz."},
  {icon:"üå∂Ô∏è", art:"der", word:"Pfeffer",   meaning:"scharfes Gew√ºrz aus Pfefferk√∂rnern", syn:["schwarzer Pfeffer"], ex:"Pfeffer macht das Gericht w√ºrzig."},
  {icon:"üõ¢Ô∏è", art:"das", word:"√ñl",        meaning:"fettige Fl√ºssigkeit zum Braten und Kochen", syn:["Oliven√∂l","Sonnenblumen√∂l"], ex:"Ich brate das Fleisch in √ñl."},
  {icon:"üç¨",  art:"der", word:"Zucker",    meaning:"s√º√ües wei√ües Pulver zum S√º√üen von Speisen und Getr√§nken", syn:["Haushaltszucker","Rohrzucker"], ex:"Der Kaffee braucht Zucker."},
];

let currentIndex = 0;

// ‚îÄ‚îÄ‚îÄ‚îÄ Safe element access ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
const els = {};
function init() {
  els.card    = document.getElementById('card');
  els.icon    = document.getElementById('icon');
  els.article = document.getElementById('article');
  els.word    = document.getElementById('word');
  els.meaning = document.getElementById('meaning');
  els.synonyms= document.getElementById('synonyms');
  els.example = document.getElementById('example');
  els.num     = document.getElementById('num');

  if (!els.card) {
    console.error("Critical DOM elements missing ‚Äì check HTML IDs");
    return;
  }

  loadCard();
}

// ‚îÄ‚îÄ‚îÄ‚îÄ Paper flip sound ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
function playFlip() {
  try {
    const ctx = new (window.AudioContext || window.webkitAudioContext)();
    const now = ctx.currentTime;
    const osc = ctx.createOscillator();
    const gain = ctx.createGain();
    osc.connect(gain); gain.connect(ctx.destination);
    osc.type = 'sawtooth';
    osc.frequency.setValueAtTime(200, now);
    osc.frequency.exponentialRampToValueAtTime(60, now + 0.22);
    gain.gain.setValueAtTime(0.45, now);
    gain.gain.exponentialRampToValueAtTime(0.001, now + 0.25);
    osc.start(now);
    osc.stop(now + 0.28);
  } catch (e) {
    // silent fail ‚Äì common on first load or mobile
  }
}

// ‚îÄ‚îÄ‚îÄ‚îÄ Load card ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
function loadCard() {
  if (!els.card) return;

  const item = vocab[currentIndex];
  els.icon.textContent = item.icon;
  els.article.textContent = item.art;
  els.article.className = `article ${item.art}`;
  els.word.textContent = item.word;
  els.meaning.textContent = item.meaning;
  els.synonyms.innerHTML = item.syn.map(s => 
    `<div style="background:rgba(212,175,55,0.12); padding:6px 14px; border-radius:10px; margin:4px;">${s}</div>`
  ).join('');
  els.example.textContent = `‚Äû${item.ex}‚Äú`;
  els.num.textContent = currentIndex + 1;
  els.card.classList.remove("flipped");
}

// ‚îÄ‚îÄ‚îÄ‚îÄ Events ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.getElementById("btn-start").addEventListener("click", () => {
  document.getElementById("screen-name").classList.remove("active");
  document.getElementById("screen-cards").classList.add("active");
  currentIndex = 0;
  loadCard();
});

els.card.addEventListener("click", () => {
  playFlip();
  els.card.classList.toggle("flipped");
});

document.getElementById("btn-next").addEventListener("click", () => {
  currentIndex++;
  if (currentIndex >= vocab.length) {
    alert("Super! Du hast alle W√∂rter durchgesehen!");
    currentIndex = 0;
  }
  loadCard();
});

document.getElementById("btn-prev").addEventListener("click", () => {
  if (currentIndex > 0) {
    currentIndex--;
    loadCard();
  }
});

// Initialize when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>
</body>
