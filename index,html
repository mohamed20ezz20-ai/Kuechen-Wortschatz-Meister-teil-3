  {i:"ðŸ§„",a:"der",w:"Knoblauch",m:"wÃ¼rzige Knolle"},
  {i:"ðŸ¥©",a:"das",w:"Fleisch",m:"Muskelgewebe von Tieren"},
  {i:"ðŸŸ",a:"der",w:"Fisch",m:"Tier aus dem Wasser"},
  {i:"ðŸ¥¦",a:"das",w:"GemÃ¼se",m:"essbare Pflanzenteile"},
  {i:"ðŸŽ",a:"das",w:"Obst",m:"sÃ¼ÃŸe FrÃ¼chte"}
];

let idx = 0;

// Safe DOM
const $ = id => document.getElementById(id);

// Load card
function load() {
  const item = v[idx];
  $("i").textContent = item.i;
  $("a").textContent = item.a;
  $("a").className = `article ${item.a}`;
  $("w").textContent = item.w;
  $("m").textContent = item.m;
  $("n").textContent = idx + 1;
  $("c").classList.remove("flipped");
}

// Flip + sound
function flip() {
  $("c").classList.toggle("flipped");
  try {
    const ctx = new (window.AudioContext || window.webkitAudioContext)();
    const osc = ctx.createOscillator();
    const g = ctx.createGain();
    osc.connect(g); g.connect(ctx.destination);
    osc.type = 'sawtooth';
    osc.frequency.setValueAtTime(220, ctx.currentTime);
    osc.frequency.exponentialRampToValueAtTime(80, ctx.currentTime + 0.18);
    g.gain.setValueAtTime(0.4, ctx.currentTime);
    g.gain.exponentialRampToValueAtTime(0.001, ctx.currentTime + 0.22);
    osc.start();
    osc.stop(ctx.currentTime + 0.25);
  } catch {}
}

// Start
$("btn-start").onclick = () => {
  $("s-name").classList.remove("active");
  $("s-cards").classList.add("active");
  idx = 0;
  load();
};

$("c").onclick = flip;

$("nxt").onclick = () => {
  idx++;
  if (idx >= v.length) {
    alert("Fertig! Alle WÃ¶rter durch.");
    idx = 0;
  }
  load();
};

$("p").onclick = () => {
  if (idx > 0) {
    idx--;
    load();
  }
};

// Init
load();
</script>
